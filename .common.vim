set ignorecase
set number
set autoindent
set incsearch
set tabstop=2
set hlsearch
set expandtab
set colorcolumn=80,100
set relativenumber
set shiftwidth=2
colorscheme desert

"Open close maps
inoremap " ""<left>
inoremap ' ''<left>
inoremap ( ()<left>
inoremap [ []<left>
inoremap { {}<left>
"inoremap {<CR> {<CR>}<ESC>O
"inoremap {;<CR> {<CR>};<ESC>O
